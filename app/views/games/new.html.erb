<div class="container">
  <div class="row">
    <% @letters.each do |letter| %>
      <div class="col-xs-1 letter text-center"><%= letter %></div>
    <% end %>
  </div>
  <form action="/score" method='post'>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
      <label for="your_word">What is your longest word?</label>
      <input type="text" class="form-control" name="your_word" placeholder="your longest word ...">
      <button type="submit" class="btn btn-primary">Submit Word</button>
  </form>
</div>
